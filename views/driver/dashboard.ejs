<!DOCTYPE html>
<html>
<head>
    <title>Driver Dashboard</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Driver Dashboard</h2>
        
        <!-- Current Ride Status -->
        <div class="card mb-4">
            <div class="card-header">
                <h3 class="mb-0">Current Ride Status</h3>
            </div>
            <div class="card-body">
                <p><strong>Status:</strong> <%= rideStatus %></p>
                <p><strong>Rider Name:</strong> <%= riderName %></p>
                <p><strong>Destination:</strong> <%= destination %></p>
            </div>
        </div>

        <!-- Ride History -->
        <div class="card mb-4">
            <div class="card-header">
                <h3 class="mb-0">Ride History</h3>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>From</th>
                            <th>To</th>
                            <th>Rider</th>
                            <th>Fare</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% rides.forEach(function(ride) { %>
                        <tr>
                            <td><%= ride.date %></td>
                            <td><%= ride.from %></td>
                            <td><%= ride.to %></td>
                            <td><%= ride.rider %></td>
                            <td><%= ride.fare %></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Available Riders -->
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0">Available Riders</h3>
            </div>
            <div class="card-body">
                <div class="list-group">
                    <% riders.forEach(function(rider) { %>
                    <div class="list-group-item">
                        <h5><%= rider.name %></h5>
                        <p><strong>Location:</strong> <%= rider.location %></p>
                        <p><strong>Destination:</strong> <%= rider.destination %></p>
                    </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>